<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="edu.sandau.online_exam">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="edu.sandau.util.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar"
        tools:replace="android:icon, android:theme,android:name">
        <activity android:name="edu.sandau.activity.RegisterActivity"></activity>
        <activity android:name="edu.sandau.activity.MeanActivity"
                  android:launchMode="singleInstance"
            />
        <activity android:name="edu.sandau.activity.myinfo.InformationActivity" />
        <activity android:name="edu.sandau.activity.myinfo.UpdateUserNameActivity" />
        <activity android:name="edu.sandau.activity.myinfo.WorryTopicActivity" />
        <activity android:name="edu.sandau.activity.myinfo.ExamRecordActivity" />
        <activity android:name="edu.sandau.activity.UserLoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>